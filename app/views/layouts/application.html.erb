<!DOCTYPE html>
<html>
<head>
  <title>Deligile</title>
  <%= stylesheet_link_tag( 'shared/deligile.css' ) %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="layout">
  <div id="header">
    <% if nil == session[ :user_id ] %>
      <%= link_to( '회원가입', new_user_path ) %>
      <%= link_to( '로그인', new_session_path ) %>
    <% else %>
      <%= link_to( '로그아웃', session_path, :method => :delete ) %>
    <% end %>
  </div>
  <div id="sidebar">
  </div>
  <div id="content">
    <%= yield %>
  </div>
  <div id="footer">
  </div>
</div>

</body>
</html>
