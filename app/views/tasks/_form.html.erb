<h2>작업</h2>

<%= form_for( @task, :url => url ) do | form | %>
  <p>
    <%= form.label( :description, '내용' ) %>
    <%= form.text_field( :description ) %>
  </p>
  <p>
    <%= form.label( :user_id, '담당자' ) %>
    <%= form.collection_select( :user_id, @users, :id, :sign_in_id, :include_blank => true ) %>
  </p>
  <p>
    <%= form.label( :estimated_time, '예상 시간' ) %>
    <%= form.text_field( :estimated_time ) %>
  </p>
  <p>
    <%= form.label( :working_time, '소요 시간' ) %>
    <%= form.text_field( :working_time ) %>
  </p>
  
  <p>
    <%= form.submit( '저장' )%>
  </p>
<% end %>
