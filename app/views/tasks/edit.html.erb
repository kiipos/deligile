<h2>작업</h2>

<%= form_for( [ @story, @task ] ) do | form | %>
  <%= form.text_field( :description ) %>
  <%= form.select( :user_id, '<option />' + options_from_collection_for_select( @users, :id, :sign_in_id, @task.user_id ) ) %>
  <%= form.submit( '저장' )%>
<% end %>

<ul>
  <li><%= link_to( '삭제', story_task_path( @story, @task ), :method => :delete,
    :confirm => '삭제하시겠습니까?' ) %></li>
</ul>
