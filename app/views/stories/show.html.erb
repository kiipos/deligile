<h2><%= @story.title %></h2>

<div><%= @story.description%></div>

<h3>작업</h3>
<%= form_for( [ @story, @task ] ) do | form | %>
  <%= form.text_field( :description )%>
  <%= form.submit( '추가' )%>
<% end %>

<table>
  <tr>
    <th>내용</th>
    <th>담당자</th>
  <tr>
    
  <%= render( @tasks )%>
</table>

<ul>
  <li><%= link_to( '삭제', story_path( @story ), :method => :delete, 
    :confirm => '삭제하시겠습니까?' ) %></li>
</ul>

